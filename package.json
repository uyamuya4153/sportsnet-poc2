{
  "name": "sportsnet-poc2",
  "version": "1.0.0",
  "description": "富山県公共施設予約システムの空き状況監視ツール",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build:lambda": "esbuild src/lambda.ts --bundle --platform=node --target=node22 --outfile=dist/lambda.js --external:@sparticuz/chromium --external:playwright --external:playwright-core",
    "start": "tsc && node dist/index.js",
    "dev": "ts-node src/index.ts"
  },
  "keywords": [
    "playwright",
    "scraper",
    "toyama"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "playwright": "^1.49.0",
    "playwright-core": "^1.49.0",
    "@sparticuz/chromium": "^131.0.0",
    "@aws-sdk/client-dynamodb": "^3.700.0",
    "@aws-sdk/lib-dynamodb": "^3.700.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "@types/aws-lambda": "^8.10.145",
    "esbuild": "^0.24.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  }
}
